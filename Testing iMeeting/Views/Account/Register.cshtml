@using iMeeting.DAL
@model RegisterViewModel

@*@model Testing_iMeeting.Models.RegisterViewModel*@
@{
    ViewBag.Title = "Register";
}
<br /> <br /> <br /> <br /> <br /> <br />
<div class="d-flex justify-content-center">

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4 style=" text-align: center;">Create a new account.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <br />

            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @Style = " width: 400px;", @placeholder = "Enter Your Name" })
            </div>
        </div>
        <div class="form-group">
            <br />
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @Style = " width: 400px;", @placeholder = "Enter Your Email" })
            </div>
        </div>
        <div class="form-group">
            <br />
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @Style = " width: 400px;", @placeholder = "Enter Your Password" })
            </div>
        </div>
        <div class="form-group">
            <br />
            <div class="col-md-10">
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="d-flex justify-content-center">

                <input type="submit" class="btn btn-primary" value="Register" Style=" width: 400px;align-self:center" />
            </div>
        </div>
    }
</div>
<br /> <br />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
